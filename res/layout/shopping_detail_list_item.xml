<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal"
    >
    <ImageView 
        android:id="@+id/detail_goods_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher"
        />
	
	   
	    <TextView 
	        android:id="@+id/detail_goods_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="22dp"
	        android:text="名字"
	        />
	     <TextView 
	        android:id="@+id/detail_goods_sn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:text="型号"
	        />
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
	    <TextView 
	        android:id="@+id/detail_goods_price"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:textSize="20dp"
	        android:text="现价"
	        />
	    <TextView 
	        android:id="@+id/detail_shop_price"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	         android:layout_marginTop="10dp"
	        android:text="原价"
	        />
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="20dp"
	        >
	   	<Button 
	   	    android:id="@+id/detail_button1"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	   	android:background="@drawable/u15"
	   	    android:text="立即购买"
	   	    />
	   	<Button 
	   	    android:id="@+id/detail_button2"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	     android:background="@drawable/u17"
	   	     android:layout_marginLeft="20dp"
	   	    android:text="加入购物车"
	   	    />
	    </LinearLayout>
</LinearLayout>

